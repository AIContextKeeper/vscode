{
  "name": "contextkeeper",
  "displayName": "ContextKeeper - AI Session Manager",
  "description": "Never lose context again. Capture Claude, Gemini, and AI conversations when you need them.",
  "version": "0.1.0",
  "publisher": "contextkeeper",
  "repository": {
    "type": "git",
    "url": "https://github.com/AIContextKeeper/vscode.git"
  },
  "homepage": "https://contextkeeper.dev",
  "bugs": {
    "url": "https://github.com/AIContextKeeper/vscode/issues"
  },
  "license": "MIT",
  "icon": "icon.png",
  "keywords": [
    "ai",
    "code",
    "context",
    "session",
    "conversation",
    "claude",
    "gemini",
    "chatgpt",
    "copilot",
    "cursor",
    "development",
    "productivity",
    "capture",
    "search"
  ],
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Machine Learning",
    "Snippets"
  ],
  "activationEvents": [
    "onCommand:contextkeeper.saveConversation",
    "onCommand:contextkeeper.showUsage",
    "onCommand:contextkeeper.openDashboard"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "contextkeeper.saveConversation",
        "title": "Save AI Conversation",
        "category": "ContextKeeper"
      },
      {
        "command": "contextkeeper.showUsage",
        "title": "Show Usage",
        "category": "ContextKeeper"
      },
      {
        "command": "contextkeeper.openDashboard",
        "title": "Open Dashboard",
        "category": "ContextKeeper"
      }
    ],
    "keybindings": [
      {
        "command": "contextkeeper.saveConversation",
        "key": "ctrl+shift+k",
        "mac": "cmd+shift+k",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "ContextKeeper",
      "properties": {
        "contextkeeper.apiEndpoint": {
          "type": "string",
          "default": "https://contextkeeper.dev/api",
          "description": "ContextKeeper API endpoint"
        },
        "contextkeeper.sessionId": {
          "type": "string",
          "default": "",
          "description": "Your ContextKeeper session ID (auto-managed)"
        },
        "contextkeeper.preferLocalAgent": {
          "type": "boolean",
          "default": true,
          "description": "Prefer sending data through local ContextKeeper agent when available"
        },
        "contextkeeper.agentPort": {
          "type": "number",
          "default": 8080,
          "description": "Port for local ContextKeeper agent communication"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.20.0",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "node-fetch": "^3.2.10"
  }
}